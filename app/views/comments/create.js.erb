<% if @comment.errors.any? %>
    $("#comment-errors-<%= @comment.post_id %>").show();
    $("#comment-errors-<%= @comment.post_id %>").html("<%= @comment.errors.full_messages.join(', ') %>");
<% else %>
    $("#comment-errors-<%= @comment.post_id %>").hide();
    $("#comment-content-<%= @comment.post_id %>").val('');
    $("#comments-<%= @comment.post_id %>").prepend("<%= j render @comment %>");
<% end %>