<%= bootstrap_form_for @milestone.new_record? ? [@goal, @milestone] : [@milestone] do |f| %>

    <%= f.alert_message 'Please fix the errors below.' %>

    <% unless @milestone.new_record? %>
        <div class="field">
          <%= f.form_group :status, label: { text: 'Status' } do %>
              <%= f.radio_button :status, 'open', checked: @milestone.open?, label: 'Open' %>
              <%= f.radio_button :status, 'closed', checked: @milestone.closed?, label: 'Closed' %>
              <%= f.radio_button :status, 'completed', checked: @milestone.completed?, label: 'Completed' %>
          <% end %>
        </div>
    <% end %>

    <div class="field">
      <%= f.text_field :reach_by_date, class: 'reach-by-date' %>
    </div>

    <div class="field">
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit 'Save' %>
    </div>

<% end %>