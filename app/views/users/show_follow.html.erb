<%= @title %>
<div>
  <%= image_tag @user.avatar.url %>
  <%= @user.full_name %>
  <%= render 'shared/stats' %>
  <%= render 'follow_form' if user_signed_in? %>
</div>


<% if @users.present? %>
  <div id="<%= @title == "Following" ? "following_list" : "follower_list" %>">
    <%= render @users  %>
  </div>
  <%= paginate @users %>
<% end %>
